<!-- Fallback CSS & favicon: se una view non passa dal layout, carichiamo comunque lo stile -->
<link rel="preload" as="style" href="/css/theme.css" onload="this.onload=null;this.rel='stylesheet'">
<noscript><link rel="stylesheet" href="/css/theme.css"></noscript>
<link rel="icon" href="/favicon.ico">

<!-- eventuale fallback via /public (se hai esposto /public come prefisso) -->
<link rel="preload" as="style" href="/public/css/theme.css" onload="this.onload=null;this.rel='stylesheet'">
<noscript><link rel="stylesheet" href="/public/css/theme.css"></noscript>
<link rel="icon" href="/public/favicon.ico">

<!-- Messaggi flash (safe anche se non sono presenti variabili) -->
<% if (typeof success !== 'undefined' && success) { %>
  <div class="alert alert-success"><%= success %></div>
<% } %>

<% if (typeof error !== 'undefined' && error) { %>
  <div class="alert alert-error"><%= error %></div>
<% } %>
