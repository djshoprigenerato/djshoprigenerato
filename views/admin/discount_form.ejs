<%- include('../layouts/main') %><h1><%= d ? 'Modifica sconto' : 'Nuovo sconto' %></h1><form method='post' style='display:grid;gap:12px;grid-template-columns:repeat(12,1fr)'><div style='grid-column:span 4'><label>Codice</label><input name='code' value='<%= d?.code||'' %>' required></div><div style='grid-column:span 4'><label>Tipo</label><select name='type'><option value='percent' <%= d?.type==='percent'?'selected':'' %>>Percentuale</option><option value='fixed' <%= d?.type==='fixed'?'selected':'' %>>Importo fisso</option></select></div><div style='grid-column:span 4'><label>Valore</label><input name='value' type='number' step='1' value='<%= d?.value||'' %>' required></div><div style='grid-column:span 4'><label>Minimo ordine (cent)</label><input name='min_total_cents' type='number' step='1' value='<%= d?.min_total_cents||0 %>'></div><div style='grid-column:span 4'><label>Usi massimi</label><input name='max_uses' type='number' step='1' value='<%= d?.max_uses||'' %>'></div><div style='grid-column:span 4'><label>Scadenza</label><input name='expires_at' type='date' value='<%= d?.expires_at ? new Date(d.expires_at).toISOString().slice(0,10) : '' %>'></div><div style='grid-column:span 12'><button class='btn primary'>Salva</button></div></form>