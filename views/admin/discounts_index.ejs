<%- include('../layouts/main') %><div style='display:flex;justify-content:space-between;align-items:center'><h1>Codici sconto</h1><a class='btn primary' href='/admin/discounts/new'>Nuovo</a></div><table class='table'><tr><th>ID</th><th>Codice</th><th>Tipo</th><th>Valore</th><th>Usi</th><th>Scade</th><th>Azioni</th></tr><% discounts.forEach(d=>{ %><tr><td><%= d.id %></td><td><%= d.code %></td><td><%= d.type %></td><td><%= d.type==='percent' ? (d.value+'%') : ('€ '+(d.value/100).toFixed(2)) %></td><td><%= d.used_count %>/<%= d.max_uses||'∞' %></td><td><%= d.expires_at ? new Date(d.expires_at).toLocaleDateString('it-IT') : '-' %></td><td><a class='btn' href='/admin/discounts/<%= d.id %>/edit'>Modifica</a><form method='post' action='/admin/discounts/<%= d.id %>/delete' style='display:inline'><button class='btn danger'>Elimina</button></form></td></tr><% }) %></table>