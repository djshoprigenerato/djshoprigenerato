<h1 class="page-title">Ordine #<%= order.id %></h1>

<p><strong>Data:</strong> <%= new Date(order.created_at).toLocaleString() %></p>
<p><strong>Email cliente:</strong> <%= order.email || '' %></p>
<p><strong>Stato:</strong> <%= order.status %></p>
<p><strong>Totale:</strong> € <%= (order.total_cents/100).toFixed(2) %></p>

<h3>Articoli</h3>
<table class="table">
  <thead><tr><th>Titolo</th><th>Quantità</th><th>Prezzo</th><th>Totale</th></tr></thead>
  <tbody>
    <% (items||[]).forEach(function(i){ %>
      <tr>
        <td><%= i.title %></td>
        <td><%= i.quantity %></td>
        <td>€ <%= (i.unit_price_cents/100).toFixed(2) %></td>
        <td>€ <%= ((i.unit_price_cents*i.quantity)/100).toFixed(2) %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

<p style="margin-top:10px">
  <a class="btn" href="/admin/orders/<%= order.id %>/pdf">Scarica PDF ordine</a>
</p>

<h3 style="margin-top:18px">Spedizione</h3>
<form method="post" action="/admin/orders/<%= order.id %>/ship" style="display:grid;gap:8px;max-width:460px">
  <label>Corriere (SDA, GLS, ecc.)</label>
  <input type="text" name="provider" value="<%= order.shipping_provider||'' %>" placeholder="SDA / GLS">
  <label>Tracking</label>
  <input type="text" name="tracking" value="<%= order.tracking_code||'' %>" placeholder="Codice tracking">
  <button class="btn">Salva e invia email al cliente</button>
</form>
