<h1 class="page-title">Ordini</h1>

<table class="table">
  <thead>
    <tr><th>ID</th><th>Data</th><th>Email</th><th>Totale</th><th>Stato</th><th></th></tr>
  </thead>
  <tbody>
    <% (orders||[]).forEach(function(o){ %>
      <tr>
        <td>#<%= o.id %></td>
        <td><%= new Date(o.created_at).toLocaleString() %></td>
        <td><%= o.email || '' %></td>
        <td>â‚¬ <%= (o.total_cents/100).toFixed(2) %></td>
        <td><%= o.status %></td>
        <td><a class="btn" href="/admin/orders/<%= o.id %>">Dettaglio</a></td>
      </tr>
    <% }) %>
    <% if(!(orders||[]).length){ %>
      <tr><td colspan="6">Ancora nessun ordine.</td></tr>
    <% } %>
  </tbody>
</table>
