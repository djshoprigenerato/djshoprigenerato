<h1 class="page-title">Categorie</h1>

<form method="post" action="/admin/categories" style="display:grid;gap:8px;max-width:520px;margin-bottom:16px">
  <label>Nome categoria</label>
  <input type="text" name="name" placeholder="Es. Mixer, Cuffie, Giradischi" required>
  <label>Descrizione (opzionale)</label>
  <textarea name="description" rows="3" placeholder="Descrizione breveâ€¦"></textarea>
  <button class="btn">Salva categoria</button>
</form>

<table class="table">
  <thead>
    <tr><th>ID</th><th>Nome</th><th>Slug</th><th>Descrizione</th><th></th></tr>
  </thead>
  <tbody>
    <% (cats||[]).forEach(function(c){ %>
      <tr>
        <td><%= c.id %></td>
        <td><%= c.name %></td>
        <td><%= c.slug %></td>
        <td><%= c.description || '' %></td>
        <td style="white-space:nowrap">
          <a class="btn" href="/admin/categories/<%= c.id %>/edit">Modifica</a>
          <form method="post" action="/admin/categories/<%= c.id %>/delete" style="display:inline" onsubmit="return confirm('Eliminare la categoria?');">
            <button class="btn btn-danger">Elimina</button>
          </form>
        </td>
      </tr>
    <% }) %>
    <% if(!(cats||[]).length){ %>
      <tr><td colspan="5">Ancora nessuna categoria.</td></tr>
    <% } %>
  </tbody>
</table>
