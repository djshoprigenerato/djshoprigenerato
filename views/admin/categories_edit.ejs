<h1 class="page-title">Modifica categoria</h1>

<form method="post" action="/admin/categories/<%= c.id %>" style="display:grid;gap:10px;max-width:540px">
  <label>Nome</label>
  <input type="text" name="name" value="<%= c.name %>" required>

  <label>Descrizione</label>
  <textarea name="description" rows="4"><%= c.description || '' %></textarea>

  <div style="display:flex;gap:8px">
    <button class="btn">Salva</button>
    <a class="btn" href="/admin/categories">Annulla</a>
  </div>
</form>

<form method="post" action="/admin/categories/<%= c.id %>/delete" onsubmit="return confirm('Eliminare la categoria?');" style="margin-top:12px">
  <button class="btn btn-danger">Elimina</button>
</form>
