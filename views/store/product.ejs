<div class="row">
  <div class="col">
    <% if (p.image) { %><img class="product-img" style="height:320px" src="<%= p.image %>"><% } %>
    <% if (p.video_url) { %>
      <div style="margin-top:12px">
        <iframe width="100%" height="320" src="<%= p.video_url.replace('watch?v=', 'embed/') %>" frameborder="0" allowfullscreen></iframe>
      </div>
    <% } %>
  </div>
  <div class="col">
    <h1><%= p.title %></h1>
    <p>Categoria: <a href="/category/<%= p.category_slug %>"><%= p.category_name %></a></p>
    <div class="price" style="margin:8px 0">â‚¬ <%= (p.price_cents/100).toFixed(2) %></div>
    <p><%= p.description %></p>
    <p><span class="ship-badge">Spedizione gratuita (SDA & GLS)</span></p>
    <form method="post" action="/cart/add">
      <input type="hidden" name="product_id" value="<%= p.id %>"/>
      <label>Quantita</label>
      <input type="number" min="1" value="1" name="quantity"/>
      <button class="btn" type="submit">Aggiungi al carrello</button>
    </form>
  </div>
</div>
