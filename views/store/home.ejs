<%- include('../layouts/main', { title: 'Home' }) %>
<section class="grid grid-home">
  <aside class="card">
    <div class="body">
      <h3>Categorie</h3>
      <ul class="list">
        <% (cats || []).forEach(c => { %>
          <li><a class="btn" href="/c/<%= c.slug %>"><%= c.name %></a></li>
        <% }) %>
      </ul>
    </div>
  </aside>

  <div class="grid grid-products">
    <% (prods || []).forEach(p => {
         const img = (p.images || [])[0]?.url;
    %>
      <div class="card">
        <a class="imgwrap" href="/p/<%= p.slug %>">
          <% if (img) { %><img src="<%= img %>" alt="<%= p.title %>" /><% } %>
        </a>
        <div class="body">
          <h3><a href="/p/<%= p.slug %>"><%= p.title %></a></h3>
          <div class="row">
            <strong>â‚¬ <%= (p.price_cents/100).toFixed(2) %></strong>
            <form method="post" action="/cart/add">
              <input type="hidden" name="product_id" value="<%= p.id %>" />
              <button class="btn primary">Aggiungi</button>
            </form>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</section>
