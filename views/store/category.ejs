<h1><%= cat.name %></h1>
<p><%= cat.description %></p>
<div class="grid">
  <% prods.forEach(p => { %>
    <div class="card">
      <a href="/product/<%= p.slug %>">
        <% if (p.image) { %><img class="product-img" src="<%= p.image %>"><% } else { %>
          <div class="product-img" style="display:flex;align-items:center;justify-content:center;">Nessuna immagine</div>
        <% } %>
        <h3><%= p.title %></h3>
      </a>
      <div class="price">â‚¬ <%= (p.price_cents/100).toFixed(2) %></div>
      <form method="post" action="/cart/add">
        <input type="hidden" name="product_id" value="<%= p.id %>"/>
        <button class="btn" type="submit">Aggiungi al carrello</button>
      </form>
    </div>
  <% }) %>
</div>
