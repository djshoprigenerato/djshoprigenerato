<%- include('../layouts/main') %><h1>Carrello</h1><table class='table'><tr><th>Articolo</th><th>Qty</th><th>Prezzo</th><th>Totale</th></tr><% cart.items.forEach(i=>{ %><tr><td><%= i.title %></td><td><%= i.qty %></td><td>€ <%= (i.price_cents/100).toFixed(2) %></td><td>€ <%= ((i.price_cents*i.qty)/100).toFixed(2) %></td></tr><% }) %><tr><td colspan='3' style='text-align:right'>Subtotale</td><td>€ <%= (cart.subtotal_cents/100).toFixed(2) %></td></tr><tr><td colspan='2'><form method='post' action='/cart/apply-coupon' style='display:flex;gap:8px'><input name='code' placeholder='Codice sconto' style='max-width:220px'/><button class='btn'>Applica</button></form></td><td style='text-align:right'>Sconto</td><td>€ <%= (cart.discount_amount_cents/100).toFixed(2) %></td></tr><tr><td colspan='3' style='text-align:right;font-weight:700'>Totale</td><td><strong>€ <%= (cart.total_cents/100).toFixed(2) %></strong></td></tr></table><h2>Spedizione</h2><form method='post' action='/checkout' style='display:grid;gap:12px;grid-template-columns:repeat(12,1fr)'><div style='grid-column:span 6'><label>Nome e Cognome</label><input name='name' required></div><div style='grid-column:span 6'><label>Email</label><input name='email' type='email' required></div><div style='grid-column:span 6'><label>Telefono</label><input name='phone'></div><div style='grid-column:span 12'><label>Indirizzo</label><input name='address' required></div><div style='grid-column:span 6'><label>Città</label><input name='city' required></div><div style='grid-column:span 3'><label>CAP</label><input name='zip' required></div><div style='grid-column:span 3'><label>Provincia</label><input name='province'></div><div style='grid-column:span 6'><label>Nazione</label><input name='country' value='Italia'></div><div style='grid-column:span 12'><button class='btn primary'>Conferma Ordine</button></div></form>